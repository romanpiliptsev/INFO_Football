<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/pl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll"
        app:layout_constraintBottom_toTopOf="@id/sa"
        android:src="@drawable/pl"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:onClick="onClickPl"/>

    <ImageView
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bl"
        android:src="@drawable/laliga"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="onClickLl"/>

    <ImageView
        android:id="@+id/sa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bl"
        app:layout_constraintBottom_toTopOf="@id/l1"
        android:src="@drawable/sa"
        android:onClick="onClickSa"/>

    <ImageView
        android:id="@+id/bl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll"
        app:layout_constraintLeft_toRightOf="@id/sa"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nl"
        android:src="@drawable/bl"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:onClick="onClickBl"/>

    <ImageView
        android:id="@+id/l1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/nl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/l1"
        android:scaleX="0.92"
        android:scaleY="0.92"
        android:onClick="onClickL1"/>

    <ImageView
        android:id="@+id/nl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bl"
        app:layout_constraintLeft_toRightOf="@id/l1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/eredivisie"
        android:scaleX="0.93"
        android:scaleY="0.93"
        android:onClick="onClickNl"/>

</androidx.constraintlayout.widget.ConstraintLayout>